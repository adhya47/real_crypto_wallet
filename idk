    <script>
        let currentWallet = null;

        // Check status
        async function checkStatus() {
            try {
                const response = await fetch("http://localhost:3000/api/status");
                const data = await response.json();
                document.getElementById("api-status").innerHTML =
                    `<span style="color: var(--success);">‚úÖ Connected ‚Ä¢ ${data.endpoints?.length || 9} endpoints active</span>`;
            } catch (error) {
                document.getElementById("api-status").innerHTML =
                    `<span style="color: var(--error);">‚ùå Disconnected ‚Ä¢ Server not running</span>`;
            }
        }

        // Create wallet
        async function createWallet() {
            try {
                const response = await fetch("http://localhost:3000/api/wallet/new", {
                    method: "POST",
                });
                const data = await response.json();

                if (data.success) {
                    document.getElementById("new-wallet-result").style.display = "block";
                    document.getElementById("mnemonic-display").innerText = data.wallet.mnemonic;
                    displayWallet(data.wallet);

                    // Show private key section for new wallets
                    document.getElementById("private-key-container").style.display = "block";
                }
            } catch (error) {
                alert("Error: " + error.message);
            }
        }

        // Import wallet
        async function importWallet() {
            const mnemonic = document.getElementById("import-mnemonic").value.trim();
            const errorDiv = document.getElementById("import-error");
            errorDiv.innerHTML = "";

            if (!mnemonic) {
                errorDiv.innerHTML = "‚ùå Please enter your 12-word phrase";
                return;
            }

            const words = mnemonic.split(" ").filter(w => w.trim() !== "");
            if (words.length !== 12) {
                errorDiv.innerHTML = `‚ùå You entered ${words.length} words. Need exactly 12 words.`;
                return;
            }

            const importBtn = event.target;
            const originalText = importBtn.innerText;
            importBtn.innerText = "‚è≥ Importing...";
            importBtn.disabled = true;

            try {
                const response = await fetch("http://localhost:3000/api/wallet/import", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({
                        mnemonic
                    }),
                });

                const data = await response.json();

                if (data.success) {
                    currentWallet = data.wallet;
                    displayWallet(data.wallet);
                    document.getElementById("import-mnemonic").value = "";
                    errorDiv.innerHTML = "";
                    document.getElementById("wallet-container").style.display = "block";

                    // Show private key section for imported wallets too
                    document.getElementById("private-key-container").style.display = "block";
                } else {
                    errorDiv.innerHTML = "‚ùå " + (data.error || "Import failed");
                }
            } catch (error) {
                errorDiv.innerHTML = "‚ùå Connection error: " + error.message;
            } finally {
                importBtn.innerText = originalText;
                importBtn.disabled = false;
            }
        }

        // Display wallet
        function displayWallet(wallet) {
            currentWallet = wallet;
            document.getElementById("wallet-container").style.display = "block";

            document.getElementById("eth-address").innerText = wallet.ethereum.address;
            document.getElementById("eth-balance").innerText = wallet.ethereum.balance || "0.00 ETH";
            document.getElementById("sol-address").innerText = wallet.solana.address;
            document.getElementById("sol-balance").innerText = wallet.solana.balance || "0.00 SOL";
            document.getElementById("eth-private").innerText = wallet.ethereum.privateKey;

            // Load transaction history automatically
            loadEthHistory();
            loadSolHistory();
        }

        // Send ETH
        async function sendEth() {
            if (!currentWallet) {
                alert("No wallet loaded");
                return;
            }

            const toAddress = document.getElementById("send-eth-to").value;
            const amount = document.getElementById("send-eth-amount").value;

            if (!toAddress || !amount) {
                alert("Please enter address and amount");
                return;
            }

            if (!confirm(`‚ö†Ô∏è Send ${amount} ETH to ${toAddress.substring(0, 10)}...?`)) return;

            try {
                const response = await fetch("http://localhost:3000/api/send/ethereum", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({
                        privateKey: currentWallet.ethereum.privateKey,
                        to: toAddress,
                        amount: amount,
                    }),
                });

                const data = await response.json();

                if (data.success) {
                    alert(`‚úÖ Transaction sent!\nHash: ${data.txHash.substring(0, 20)}...`);
                    loadEthHistory(); // Refresh history
                } else {
                    alert(`‚ùå Failed: ${data.error}`);
                }
            } catch (error) {
                alert("Error: " + error.message);
            }
        }

        // Send SOL
        async function sendSol() {
            if (!currentWallet) {
                alert("No wallet loaded");
                return;
            }

            const toAddress = document.getElementById("send-sol-to").value;
            const amount = document.getElementById("send-sol-amount").value;

            if (!toAddress || !amount) {
                alert("Please enter address and amount");
                return;
            }

            if (!confirm(`‚ö†Ô∏è Send ${amount} SOL to ${toAddress.substring(0, 10)}...?`)) return;

            try {
                const response = await fetch("http://localhost:3000/api/send/solana", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({
                        privateKey: currentWallet.solana.privateKeyBase58,
                        to: toAddress,
                        amount: amount,
                    }),
                });

                const data = await response.json();

                if (data.success) {
                    alert(`‚úÖ Transaction sent!\nSignature: ${data.txHash.substring(0, 20)}...`);
                    loadSolHistory(); // Refresh history
                } else {
                    alert(`‚ùå Failed: ${data.error}`);
                }
            } catch (error) {
                alert("Error: " + error.message);
            }
        }

        // Load ETH history
        async function loadEthHistory() {
            if (!currentWallet) return;

            const address = currentWallet.ethereum.address;
            const historyDiv = document.getElementById("eth-transactions-list");
            historyDiv.innerHTML = '<div class="loading">Loading Ethereum transactions...</div>';

            try {
                const response = await fetch("http://localhost:3000/api/history/ethereum", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({
                        address
                    }),
                });

                const data = await response.json();

                if (data.success && data.transactions.length > 0) {
                    let html = '<table class="history-table"><thead><tr><th>Type</th><th>Amount</th><th>To/From</th><th>Date</th><th></th></tr></thead><tbody>';

                    data.transactions.forEach(tx => {
                        html += `<tr>
                            <td><span class="tx-type ${tx.type}">${tx.type === 'sent' ? '‚Üë' : '‚Üì'} ${tx.type.toUpperCase()}</span></td>
                            <td><strong>${parseFloat(tx.value).toFixed(6)} ETH</strong></td>
                            <td style="font-family: monospace;">${tx.type === 'sent' ? (tx.to || '').substring(0, 10) + '...' : (tx.from || '').substring(0, 10) + '...'}</td>
                            <td>${new Date(tx.date).toLocaleDateString()}</td>
                            <td><a href="https://sepolia.etherscan.io/tx/${tx.hash}" target="_blank" class="tx-link">View ‚Üó</a></td>
                        </tr>`;
                    });

                    html += '</tbody></table>';
                    historyDiv.innerHTML = html;
                } else {
                    historyDiv.innerHTML = '<div class="text-center" style="padding: 2rem; color: var(--gray);">üì≠ No transactions found</div>';
                }
            } catch (error) {
                historyDiv.innerHTML = `<div style="color: var(--error);">‚ùå Error: ${error.message}</div>`;
            }
        }

        // Load SOL history
        async function loadSolHistory() {
            if (!currentWallet) return;

            const address = currentWallet.solana.address;
            const historyDiv = document.getElementById("sol-transactions-list");
            historyDiv.innerHTML = '<div class="loading">Loading Solana transactions...</div>';

            try {
                const response = await fetch("http://localhost:3000/api/history/solana", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({
                        address
                    }),
                });

                const data = await response.json();

                if (data.success && data.transactions.length > 0) {
                    let html = '<table class="history-table"><thead><tr><th>Signature</th><th>Date</th><th></th></tr></thead><tbody>';

                    data.transactions.forEach(tx => {
                        html += `<tr>
                            <td style="font-family: monospace;">${tx.signature.substring(0, 16)}...</td>
                            <td>${new Date(tx.date).toLocaleDateString()}</td>
                            <td><a href="https://solscan.io/tx/${tx.signature}" target="_blank" class="tx-link">View ‚Üó</a></td>
                        </tr>`;
                    });

                    html += '</tbody></table>';
                    historyDiv.innerHTML = html;
                } else {
                    historyDiv.innerHTML = '<div class="text-center" style="padding: 2rem; color: var(--gray);">üì≠ No transactions found</div>';
                }
            } catch (error) {
                historyDiv.innerHTML = `<div style="color: var(--error);">‚ùå Error: ${error.message}</div>`;
            }
        }

        // Check status on load
        checkStatus();
    </script>
</body>

</html>

