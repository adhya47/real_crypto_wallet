    <script>
        let currentWallets = [];

        // Switch between tabs
        function switchTab(tabName) {
            document
                .querySelectorAll(".tab")
                .forEach((t) => t.classList.remove("active"));
            document
                .querySelector(`.tab[onclick="switchTab('${tabName}')"]`)
                .classList.add("active");

            document.getElementById("create-tab").classList.add("hidden");
            document.getElementById("import-tab").classList.add("hidden");
            document.getElementById("wallets-tab").classList.add("hidden");

            if (tabName === "create") {
                document.getElementById("create-tab").classList.remove("hidden");
            } else if (tabName === "import") {
                document.getElementById("import-tab").classList.remove("hidden");
            } else if (tabName === "wallets") {
                document.getElementById("wallets-tab").classList.remove("hidden");
                loadWallets();
            }
        }

        // Create new wallet
        async function createNewWallet() {
            try {
                const response = await fetch("http://localhost:3000/api/wallet/new", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                });

                const data = await response.json();

                if (data.success) {
                    document
                        .getElementById("new-wallet-info")
                        .classList.remove("hidden");
                    document.getElementById("mnemonic-display").innerText =
                        data.wallet.mnemonic;
                    currentWallets.push(data.wallet);
                    showSuccess("Wallet created successfully!");

                    // Show wallet details
                    showWalletDetail(data.wallet);
                }
            } catch (error) {
                alert("Error creating wallet: " + error.message);
            }
        }

        // Import wallet
        async function importWallet() {
            const mnemonic = document
                .getElementById("import-mnemonic")
                .value.trim();

            if (!mnemonic) {
                document.getElementById("import-error").innerText =
                    "Please enter mnemonic phrase";
                return;
            }

            try {
                const response = await fetch(
                    "http://localhost:3000/api/wallet/import", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify({
                            mnemonic
                        }),
                    },
                );

                const data = await response.json();

                if (data.success) {
                    document.getElementById("import-error").innerText = "";
                    document.getElementById("import-mnemonic").value = "";
                    currentWallets.push(data.wallet);
                    showSuccess("Wallet imported successfully!");
                    switchTab("wallets");
                    showWalletDetail(data.wallet);
                } else {
                    document.getElementById("import-error").innerText = data.error;
                }
            } catch (error) {
                document.getElementById("import-error").innerText =
                    "Error importing wallet: " + error.message;
            }
        }

        // Load all wallets
        async function loadWallets() {
            try {
                const response = await fetch("http://localhost:3000/api/wallets");
                const data = await response.json();

                if (data.success) {
                    currentWallets = data.wallets;
                    displayWallets(data.wallets);
                }
            } catch (error) {
                console.error("Error loading wallets:", error);
            }
        }

        // Display wallets list
        function displayWallets(wallets) {
            const walletsList = document.getElementById("wallets-list");

            if (wallets.length === 0) {
                walletsList.innerHTML =
                    '<p style="text-align: center; color: #666;">No wallets found. Create or import a wallet.</p>';
                return;
            }

            let html = "";
            wallets.forEach((wallet, index) => {
                html += `
                    <div class="wallet-card" onclick="showWalletDetail(${JSON.stringify(wallet).replace(/"/g, "&quot;")})">
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <div>
                                <strong>Wallet ${index + 1}</strong>
                                <div style="font-size: 12px; color: #666;">Created: ${new Date(wallet.createdAt).toLocaleDateString()}</div>
                            </div>
                            <div style="display: flex; gap: 10px;">
                                <span class="wallet-icon eth-icon">Œû</span>
                                <span class="wallet-icon btc-icon">‚Çø</span>
                                <span class="wallet-icon sol-icon">‚óé</span>
                            </div>
                        </div>
                        <div style="margin-top: 10px; font-family: monospace; font-size: 12px; color: #666;">
                            ETH: ${wallet.ethereum.address.substring(0, 10)}...
                        </div>
                    </div>
                `;
            });

            walletsList.innerHTML = html;
        }

        // Show wallet detail
        function showWalletDetail(wallet) {
            document.getElementById("wallet-detail").classList.remove("hidden");

            let html = `
                <div style="margin-bottom: 20px;">
                    <h3>üîê Mnemonic Phrase</h3>
                    <div class="mnemonic-box">${wallet.mnemonic}</div>
                    <div class="warning">‚ö†Ô∏è Never share this phrase with anyone!</div>
                </div>
                
                <h3>üí∞ Wallets</h3>
                
                <!-- Ethereum -->
                <div class="wallet-card">
                    <div class="wallet-header">
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <span class="wallet-icon eth-icon">Œû</span>
                            <strong>Ethereum</strong>
                        </div>
                    </div>
                    <div class="address">${wallet.ethereum.address}</div>
                    <div class="balance">${wallet.ethereum.balance}</div>
                    <div class="private-key">
                        <strong>Private Key:</strong> ${wallet.ethereum.privateKey.substring(0, 20)}...
                    </div>
                    
                    <div class="send-section">
                        <h4>Send ETH</h4>
                        <div class="input-group">
                            <label>To Address</label>
                            <input type="text" id="send-eth-to" placeholder="0x...">
                        </div>
                        <div class="input-group">
                            <label>Amount (ETH)</label>
                            <input type="number" id="send-eth-amount" placeholder="0.00">
                        </div>
                        <button class="btn" onclick="sendTransaction('${wallet.ethereum.address}', 'ethereum')">Send ETH</button>
                    </div>
                    
                    <div class="transaction-history">
                        <h4>üìú Transaction History</h4>
                        <div id="eth-transactions">
                            <p style="color: #666;">Loading transactions...</p>
                        </div>
                    </div>
                </div>
                
                <!-- Bitcoin -->
                <div class="wallet-card">
                    <div class="wallet-header">
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <span class="wallet-icon btc-icon">‚Çø</span>
                            <strong>Bitcoin</strong>
                        </div>
                    </div>
                    <div class="address">${wallet.bitcoin.address}</div>
                    <div class="balance">${wallet.bitcoin.balance}</div>
                    <div class="private-key">
                        <strong>Private Key (WIF):</strong> ${wallet.bitcoin.privateKeyWIF.substring(0, 20)}...
                    </div>
                    
                    <div class="send-section">
                        <h4>Send BTC</h4>
                        <div class="input-group">
                            <label>To Address</label>
                            <input type="text" id="send-btc-to" placeholder="1...">
                        </div>
                        <div class="input-group">
                            <label>Amount (BTC)</label>
                            <input type="number" id="send-btc-amount" placeholder="0.00000000">
                        </div>
                        <button class="btn" onclick="sendTransaction('${wallet.bitcoin.address}', 'bitcoin')">Send BTC</button>
                    </div>
                </div>
                
                <!-- Solana -->
                <div class="wallet-card">
                    <div class="wallet-header">
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <span class="wallet-icon sol-icon">‚óé</span>
                            <strong>Solana</strong>
                        </div>
                    </div>
                    <div class="address">${wallet.solana.address}</div>
                    <div class="balance">${wallet.solana.balance}</div>
                    <div class="private-key">
                        <strong>Private Key:</strong> ${wallet.solana.privateKeyBase58.substring(0, 20)}...
                    </div>
                    
                    <div class="send-section">
                        <h4>Send SOL</h4>
                        <div class="input-group">
                            <label>To Address</label>
                            <input type="text" id="send-sol-to" placeholder="...">
                        </div>
                        <div class="input-group">
                            <label>Amount (SOL)</label>
                            <input type="number" id="send-sol-amount" placeholder="0.00">
                        </div>
                        <button class="btn" onclick="sendTransaction('${wallet.solana.address}', 'solana')">Send SOL</button>
                    </div>
                </div>
            `;

            document.getElementById("wallet-detail-content").innerHTML = html;

            // Load transactions for this wallet
            loadTransactions(
                wallet.ethereum.address,
                "ethereum",
                "eth-transactions",
            );
        }

        // Hide wallet detail
        function hideWalletDetail() {
            document.getElementById("wallet-detail").classList.add("hidden");
        }

        // Load transaction history
        async function loadTransactions(address, blockchain, elementId) {
            try {
                const response = await fetch(
                    "http://localhost:3000/api/transactions", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify({
                            address,
                            blockchain
                        }),
                    },
                );

                const data = await response.json();

                if (data.success && data.transactions.length > 0) {
                    let html = "";
                    data.transactions.forEach((tx) => {
                        html += `
                            <div class="transaction-item">
                                <div>
                                    <span style="color: ${tx.type === "sent" ? "#f5576c" : "#00b894"}">
                                        ${tx.type === "sent" ? "‚Üë Sent" : "‚Üì Received"}
                                    </span>
                                    <div style="font-size: 12px; color: #666;">${tx.date}</div>
                                </div>
                                <div style="text-align: right;">
                                    <strong>${tx.type === "sent" ? "-" : "+"}${tx.amount} ${blockchain === "ethereum" ? "ETH" : blockchain === "bitcoin" ? "BTC" : "SOL"}</strong>
                                    <div style="font-size: 12px; color: #666;">${tx.type === "sent" ? "To: " + tx.to : "From: " + tx.from}</div>
                                </div>
                            </div>
                        `;
                    });
                    document.getElementById(elementId).innerHTML = html;
                } else {
                    document.getElementById(elementId).innerHTML =
                        '<p style="color: #666;">No transactions found</p>';
                }
            } catch (error) {
                console.error("Error loading transactions:", error);
                document.getElementById(elementId).innerHTML =
                    '<p style="color: red;">Error loading transactions</p>';
            }
        }

        // Send transaction
        async function sendTransaction(fromAddress, blockchain) {
            let toAddress, amount;

            if (blockchain === "ethereum") {
                toAddress = document.getElementById("send-eth-to").value;
                amount = document.getElementById("send-eth-amount").value;
            } else if (blockchain === "bitcoin") {
                toAddress = document.getElementById("send-btc-to").value;
                amount = document.getElementById("send-btc-amount").value;
            } else if (blockchain === "solana") {
                toAddress = document.getElementById("send-sol-to").value;
                amount = document.getElementById("send-sol-amount").value;
            }

            if (!toAddress || !amount) {
                alert("Please enter address and amount");
                return;
            }

            try {
                const response = await fetch("http://localhost:3000/api/send", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                        fromAddress,
                        toAddress,
                        amount,
                        blockchain,
                    }),
                });

                const data = await response.json();

                if (data.success) {
                    alert(
                        `‚úÖ Transaction sent successfully!\nTX ID: ${data.transaction.id}`,
                    );
                }
            } catch (error) {
                alert("Error sending transaction: " + error.message);
            }
        }

        // Show success message
        function showSuccess(message) {
            // Create a temporary success notification
            const notification = document.createElement("div");
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: #00b894;
                color: white;
                padding: 15px 25px;
                border-radius: 10px;
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
                z-index: 1000;
            `;
            notification.textContent = "‚úÖ " + message;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.remove();
            }, 3000);
        }
    </script>
</body>

</html>

